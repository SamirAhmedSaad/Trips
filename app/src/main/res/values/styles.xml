<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

    </style>

    <style name="WhiteTheme" parent="AppTheme">

        <item name="headTextColor">@color/black</item>
        <item name="descTextColor">@color/darkGray</item>
        <item name="defaultTextColor">@color/black</item>
        <item name="backgroundColor">@color/white</item>
        <item name="iconsTintColor">@color/black</item>
        <item name="recyclerBackgroundColor">@color/whiteGray</item>

    </style>


    <style name="BlackTheme" parent="AppTheme">

        <item name="headTextColor">@color/white</item>
        <item name="descTextColor">@color/whiteGray</item>
        <item name="defaultTextColor">@color/white</item>
        <item name="backgroundColor">@color/black</item>
        <item name="iconsTintColor">@color/white</item>
        <item name="recyclerBackgroundColor">@color/hint_whiteBlack</item>

    </style>


    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <style name="textParent">
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_10</item>
    </style>

    <style name="headerText" parent="textParent">
        <item name="android:layout_margin">@dimen/margin_10</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="smallText" parent="textParent">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:layout_marginStart">@dimen/margin_5</item>
        <item name="android:layout_marginEnd">@dimen/margin_5</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">@dimen/margin_5</item>
    </style>


    <style name="buttonText" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_blue</item>
        <item name="android:layout_marginStart">@dimen/margin_10</item>
        <item name="android:layout_marginEnd">@dimen/margin_10</item>
        <item name="singleLine">true</item>
    </style>

</resources>
